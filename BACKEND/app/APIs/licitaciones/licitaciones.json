{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gestión de Licitaciones - Core",
    "version": "1.0.0",
    "description": "Endpoints principales para listar, crear y obtener detalles de licitaciones"
  },
  "paths": {
    "/licitaciones": {
      "get": {
        "tags": ["Licitaciones"],
        "summary": "Listar licitaciones con filtros",
        "description": "Obtiene todas las licitaciones con filtros opcionales por estado, fecha y presupuesto",
        "operationId": "listarLicitaciones",
        "parameters": [
          {
            "name": "estado",
            "in": "query",
            "description": "Filtrar por estado de la licitación",
            "required": false,
            "schema": {
              "$ref": "#/components/schemas/EstadoLicitacion"
            }
          },
          {
            "name": "fechaDesde",
            "in": "query",
            "description": "Fecha de inicio del rango de búsqueda",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-01-01"
            }
          },
          {
            "name": "fechaHasta",
            "in": "query",
            "description": "Fecha de fin del rango de búsqueda",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-12-31"
            }
          },
          {
            "name": "limiteMontoMin",
            "in": "query",
            "description": "Límite de monto mínimo",
            "required": false,
            "schema": {
              "type": "number",
              "format": "float",
              "example": 10000
            }
          },
          {
            "name": "limiteMontoMax",
            "in": "query",
            "description": "Límite de monto máximo",
            "required": false,
            "schema": {
              "type": "number",
              "format": "float",
              "example": 500000
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de licitaciones",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/LicitacionListItem"
                      }
                    },
                    "totalElements": {
                      "type": "integer"
                    },
                    "totalPages": {
                      "type": "integer"
                    },
                    "currentPage": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "content": [
                    {
                      "idLicitacion": 456,
                      "nombre": "Compra de equipos de cómputo",
                      "estado": "NUEVA",
                      "fechaLimite": "2025-12-31",
                      "limiteMonto": 150000,
                      "cantidadPropuestas": 0
                    },
                    {
                      "idLicitacion": 457,
                      "nombre": "Servicio de limpieza anual",
                      "estado": "CON_PROPUESTAS",
                      "fechaLimite": "2025-11-30",
                      "limiteMonto": 80000,
                      "cantidadPropuestas": 3
                    }
                  ],
                  "totalElements": 2,
                  "totalPages": 1,
                  "currentPage": 0
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      },
      "post": {
        "tags": ["Licitaciones"],
        "summary": "Crear nueva licitación",
        "description": "Crea una nueva licitación cuando una solicitud de compra supera el monto límite establecido. Hereda nombre e ítems de la solicitud original.",
        "operationId": "crearLicitacion",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearLicitacionRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Licitación creada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LicitacionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Datos inválidos"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/licitaciones/{id}": {
      "get": {
        "tags": ["Licitaciones"],
        "summary": "Obtener detalle de licitación",
        "description": "Obtiene todos los detalles de una licitación específica incluyendo ítems, documentos requeridos, propuestas y evaluaciones",
        "operationId": "obtenerLicitacion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 456
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalle de la licitación",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LicitacionDetalle"
                },
                "example": {
                  "idLicitacion": 456,
                  "solicitudId": 123,
                  "nombre": "Compra de equipos de cómputo",
                  "estado": "CON_PROPUESTAS",
                  "fechaCreacion": "2025-11-13T10:30:00",
                  "fechaLimite": "2025-12-31T23:59:59",
                  "limiteMonto": 150000,
                  "comprador": {
                    "id": 5,
                    "nombre": "Samuel Luque",
                    "email": "samuel.luque@empresa.com"
                  },
                  "supervisor": {
                    "id": 10,
                    "nombre": "Mario Altamirano",
                    "email": "mario.altamirano@empresa.com"
                  },
                  "items": {
                    "itemsMaterial": [
                      {
                        "material": {
                          "idMaterial": 1,
                          "nombre": "Laptop HP Pavilion",
                          "descripcion": "Intel i7, 16GB RAM, 512GB SSD"
                        },
                        "cantidad": 10,
                        "precioUnitario": 2500
                      }
                    ],
                    "itemsServicio": [
                      {
                        "servicio": {
                          "idServicio": 1,
                          "nombre": "Instalación y configuración"
                        },
                        "tarifaHora": 150,
                        "horasEstimadas": 8
                      }
                    ]
                  },
                  "documentosRequeridos": [
                    {
                      "idRequerido": 1,
                      "tipo": "LEGAL",
                      "documento": "RUC y Ficha RUC",
                      "obligatorio": true
                    }
                  ],
                  "propuestas": [
                    {
                      "idPropuesta": 1001,
                      "proveedor": {
                        "id": 789,
                        "nombre": "TechSupply S.A.C.",
                        "ruc": "20123456789"
                      },
                      "montoOfertado": 145000,
                      "estadoEvaluacionTecnica": "APROBADA",
                      "estadoEvaluacionEconomica": "PENDIENTE"
                    }
                  ],
                  "timestamps": {
                    "BORRADOR": "2025-11-13T10:30:00",
                    "NUEVA": "2025-11-13T14:20:00",
                    "EN_INVITACION": "2025-11-14T09:00:00",
                    "CON_PROPUESTAS": "2025-11-20T16:45:00"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Licitación no encontrada"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EstadoLicitacion": {
        "type": "string",
        "enum": [
          "BORRADOR",
          "NUEVA",
          "EN_INVITACION",
          "CON_PROPUESTAS",
          "EVALUACION_TECNICA",
          "EVALUACION_ECONOMIA",
          "ADJUDICADA",
          "CON_CONTRATO",
          "FINALIZADA",
          "CANCELADA"
        ]
      },
      "LicitacionListItem": {
        "type": "object",
        "properties": {
          "idLicitacion": {
            "type": "integer",
            "format": "int64"
          },
          "nombre": {
            "type": "string"
          },
          "estado": {
            "$ref": "#/components/schemas/EstadoLicitacion"
          },
          "fechaLimite": {
            "type": "string",
            "format": "date"
          },
          "limiteMonto": {
            "type": "number",
            "format": "float"
          },
          "cantidadPropuestas": {
            "type": "integer"
          }
        }
      },
      "CrearLicitacionRequest": {
        "type": "object",
        "required": [
          "solicitudId",
          "nombreSolicitud",
          "items",
          "fechaLimite",
          "limiteMonto",
          "documentosRequeridos"
        ],
        "properties": {
          "solicitudId": {
            "type": "integer",
            "description": "ID de la solicitud de compra origen"
          },
          "nombreSolicitud": {
            "type": "string",
            "description": "Nombre heredado de la solicitud"
          },
          "items": {
            "type": "object",
            "properties": {
              "itemsMaterial": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              },
              "itemsServicio": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          },
          "fechaLimite": {
            "type": "string",
            "format": "date-time"
          },
          "limiteMonto": {
            "type": "number",
            "format": "float"
          },
          "documentosRequeridos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idRequerido": {
                  "type": "integer"
                },
                "tipo": {
                  "type": "string",
                  "enum": ["LEGAL", "TECNICO", "ECONOMICO"]
                },
                "documento": {
                  "type": "string"
                },
                "obligatorio": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      },
      "LicitacionResponse": {
        "type": "object",
        "properties": {
          "idLicitacion": {
            "type": "integer"
          },
          "solicitudId": {
            "type": "integer"
          },
          "nombre": {
            "type": "string"
          },
          "estado": {
            "$ref": "#/components/schemas/EstadoLicitacion"
          },
          "fechaCreacion": {
            "type": "string",
            "format": "date-time"
          },
          "fechaLimite": {
            "type": "string",
            "format": "date-time"
          },
          "limiteMonto": {
            "type": "number"
          },
          "mensaje": {
            "type": "string"
          }
        }
      },
      "LicitacionDetalle": {
        "type": "object",
        "description": "Detalle completo de una licitación con toda su información"
      }
    }
  }
}
