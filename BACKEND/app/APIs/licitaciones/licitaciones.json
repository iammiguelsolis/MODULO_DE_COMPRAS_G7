{
  "endpoints": [
    {
      "method": "POST",
      "url": "/api/licitaciones",
      "summary": "Crear una nueva licitación (Borrador)",
      "description": "Crea una licitación en estado BORRADOR. El sistema COPIA los datos de la solicitud original (título, comentarios, items) para garantizar inmutabilidad legal. También guarda los documentos requeridos seleccionados.",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "solicitud_id": {
                  "type": "integer",
                  "description": "ID de la solicitud de origen (Tabla: solicitudes)"
                },
                "fecha_limite": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Fecha límite para recibir propuestas (Tabla: licitaciones)"
                },
                "presupuesto_max": {
                  "type": "number",
                  "format": "float",
                  "description": "Presupuesto máximo asignado (Tabla: licitaciones)"
                },
                "documentos_requeridos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "nombre": { "type": "string" },
                      "tipo": {
                        "type": "string",
                        "enum": ["LEGAL", "TECNICO", "ECONOMICO"]
                      },
                      "obligatorio": { "type": "boolean" },
                      "ruta_plantilla": {
                        "type": "string",
                        "description": "URL de la plantilla en Supabase"
                      }
                    },
                    "required": ["nombre", "tipo", "ruta_plantilla"]
                  },
                  "description": "Lista de documentos que se guardarán en la tabla 'documentos_requeridos'"
                }
              },
              "required": [
                "solicitud_id",
                "fecha_limite",
                "presupuesto_max",
                "documentos_requeridos"
              ]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Licitación creada exitosamente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "BORRADOR" },
                  "mensaje": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "GET",
      "url": "/api/licitaciones",
      "summary": "Listar licitaciones",
      "description": "Obtiene una lista paginada de licitaciones con filtros. Consulta la tabla 'licitaciones'.",
      "parameters": [
        {
          "name": "estado",
          "in": "query",
          "schema": { "type": "string" },
          "description": "Filtrar por columna 'estado'"
        },
        {
          "name": "fecha_inicio",
          "in": "query",
          "schema": { "type": "string", "format": "date" },
          "description": "Filtro >= fecha_creacion"
        },
        {
          "name": "fecha_fin",
          "in": "query",
          "schema": { "type": "string", "format": "date" },
          "description": "Filtro <= fecha_creacion"
        },
        {
          "name": "search",
          "in": "query",
          "schema": { "type": "string" },
          "description": "Búsqueda LIKE en 'titulo' o ID exacto"
        },
        {
          "name": "page",
          "in": "query",
          "schema": { "type": "integer", "default": 1 }
        },
        {
          "name": "per_page",
          "in": "query",
          "schema": { "type": "integer", "default": 10 }
        }
      ],
      "responses": {
        "200": {
          "description": "Lista de licitaciones",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id_licitacion": { "type": "integer" },
                        "titulo": { "type": "string" },
                        "fecha_creacion": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "estado": { "type": "string" },
                        "monto_total": { "type": "number" }
                      }
                    }
                  },
                  "total": { "type": "integer" },
                  "pages": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "GET",
      "url": "/api/licitaciones/{id}",
      "summary": "Obtener detalles de una licitación",
      "description": "Devuelve la información completa de la licitación, haciendo JOIN con items y documentos requeridos.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Detalle de la licitación",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "solicitud_id": { "type": "integer" },
                  "titulo": { "type": "string" },
                  "comentarios": { "type": "string" },
                  "fecha_limite": { "type": "string", "format": "date-time" },
                  "presupuesto_max": { "type": "number" },
                  "estado": { "type": "string" },
                  "supervisor_id": { "type": "integer" },
                  "motivo_rechazo": { "type": "string" },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id_item": { "type": "integer" },
                        "nombre": { "type": "string" },
                        "cantidad": { "type": "integer" },
                        "unidad": { "type": "string" }
                      }
                    },
                    "description": "Datos de tabla 'items_licitacion'"
                  },
                  "documentos_requeridos": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id_requerido": { "type": "integer" },
                        "nombre": { "type": "string" },
                        "ruta_plantilla": { "type": "string" }
                      }
                    },
                    "description": "Datos de tabla 'documentos_requeridos'"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "PUT",
      "url": "/api/licitaciones/{id}",
      "summary": "Actualizar licitación (Solo Borrador)",
      "description": "Permite modificar fecha límite o presupuesto en la tabla 'licitaciones' mientras esté en estado BORRADOR.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "fecha_limite": { "type": "string", "format": "date-time" },
                "presupuesto_max": { "type": "number" }
              }
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Licitación actualizada" }
      }
    },
    {
      "method": "DELETE",
      "url": "/api/licitaciones/{id}",
      "summary": "Cancelar/Eliminar licitación",
      "description": "Si está en BORRADOR, elimina registros en cascada (licitaciones, items, documentos_requeridos).",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": { "description": "Licitación cancelada/eliminada" }
      }
    }
  ]
}
