{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Proveedores",
    "version": "1.0.0",
    "description": "Endpoints para gestionar y listar proveedores disponibles para invitar a licitaciones"
  },
  "paths": {
    "/proveedores": {
      "get": {
        "tags": ["Proveedores"],
        "summary": "Listar proveedores disponibles",
        "description": "Obtiene la lista de proveedores activos que pueden ser invitados a participar en licitaciones. Permite filtrado por categoría, estado y búsqueda por nombre/RUC.",
        "operationId": "listarProveedores",
        "parameters": [
          {
            "name": "estado",
            "in": "query",
            "description": "Filtrar por estado del proveedor",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["PENDIENTE", "ACTIVO", "INACTIVO"],
              "default": "ACTIVO"
            }
          },
          {
            "name": "categoria",
            "in": "query",
            "description": "Filtrar por categoría de productos/servicios",
            "required": false,
            "schema": {
              "type": "string",
              "example": "Tecnología"
            }
          },
          {
            "name": "busqueda",
            "in": "query",
            "description": "Buscar por nombre o RUC del proveedor",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número de página (inicia en 0)",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Cantidad de elementos por página",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de proveedores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "content": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Proveedor"
                      }
                    },
                    "totalElements": {
                      "type": "integer"
                    },
                    "totalPages": {
                      "type": "integer"
                    },
                    "currentPage": {
                      "type": "integer"
                    }
                  }
                },
                "example": {
                  "content": [
                    {
                      "id": 789,
                      "nombre": "TechSupply S.A.C.",
                      "ruc": "20123456789",
                      "email": "ventas@techsupply.com",
                      "telefono": "+51 1 234-5678",
                      "categoria": "Tecnología",
                      "estado": "ACTIVO",
                      "direccion": "Av. Tecnológica 456, Lima",
                      "calificacion": 4.5,
                      "licitacionesGanadas": 12
                    },
                    {
                      "id": 790,
                      "nombre": "Computadoras del Perú SA",
                      "ruc": "20987654321",
                      "email": "contacto@computadoras.pe",
                      "telefono": "+51 1 987-6543",
                      "categoria": "Tecnología",
                      "estado": "ACTIVO",
                      "direccion": "Jr. Principal 123, Lima",
                      "calificacion": 4.8,
                      "licitacionesGanadas": 18
                    }
                  ],
                  "totalElements": 45,
                  "totalPages": 3,
                  "currentPage": 0
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/proveedores/{id}": {
      "get": {
        "tags": ["Proveedores"],
        "summary": "Obtener detalle de proveedor",
        "description": "Obtiene la información detallada de un proveedor específico",
        "operationId": "obtenerProveedor",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del proveedor",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalle del proveedor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProveedorDetalle"
                }
              }
            }
          },
          "404": {
            "description": "Proveedor no encontrado"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Proveedor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "nombre": {
            "type": "string"
          },
          "ruc": {
            "type": "string",
            "pattern": "^[0-9]{11}$"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "telefono": {
            "type": "string"
          },
          "categoria": {
            "type": "string",
            "description": "Categoría principal de productos/servicios"
          },
          "estado": {
            "type": "string",
            "enum": ["PENDIENTE", "ACTIVO", "INACTIVO"]
          },
          "direccion": {
            "type": "string"
          },
          "calificacion": {
            "type": "number",
            "format": "float",
            "minimum": 0,
            "maximum": 5,
            "description": "Calificación promedio del proveedor"
          },
          "licitacionesGanadas": {
            "type": "integer",
            "description": "Número de licitaciones ganadas históricamente"
          }
        }
      },
      "ProveedorDetalle": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Proveedor"
          },
          {
            "type": "object",
            "properties": {
              "razonSocial": {
                "type": "string"
              },
              "representanteLegal": {
                "type": "string"
              },
              "fechaRegistro": {
                "type": "string",
                "format": "date-time"
              },
              "categorias": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Todas las categorías en las que opera"
              },
              "historialLicitaciones": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "idLicitacion": {
                      "type": "integer"
                    },
                    "nombre": {
                      "type": "string"
                    },
                    "fechaAdjudicacion": {
                      "type": "string",
                      "format": "date"
                    },
                    "monto": {
                      "type": "number"
                    },
                    "ganada": {
                      "type": "boolean"
                    }
                  }
                }
              },
              "certificaciones": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Certificaciones vigentes (ISO, etc.)"
              }
            }
          }
        ]
      }
    }
  }
}
