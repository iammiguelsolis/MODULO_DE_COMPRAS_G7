{
  "endpoints": [
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/aprobar",
      "summary": "Aprobar licitación (Supervisor)",
      "description": "El supervisor aprueba la licitación. Actualiza la tabla 'licitaciones': establece 'supervisor_id', 'aprobada_por_supervisor'=TRUE y cambia 'estado' a 'NUEVA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "supervisor_id": {
                  "type": "integer",
                  "description": "ID del supervisor que aprueba"
                }
              },
              "required": ["supervisor_id"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Licitación aprobada exitosamente. Estado: NUEVA.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "NUEVA" }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/rechazar",
      "summary": "Rechazar licitación (Supervisor)",
      "description": "El supervisor rechaza la licitación. Actualiza la tabla 'licitaciones': establece 'supervisor_id', 'motivo_rechazo' y cambia 'estado' a 'CANCELADA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "supervisor_id": {
                  "type": "integer",
                  "description": "ID del supervisor que rechaza"
                },
                "motivo_rechazo": {
                  "type": "string",
                  "description": "Razón del rechazo"
                }
              },
              "required": ["supervisor_id", "motivo_rechazo"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Licitación rechazada. Estado: CANCELADA.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "CANCELADA" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
