{
  "endpoints": [
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/propuestas",
      "summary": "Registrar propuesta de proveedor",
      "description": "Crea un registro en la tabla 'propuestas' para el proveedor. Verifica que el proveedor haya sido invitado.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "proveedor_id": {
                  "type": "integer",
                  "description": "ID del proveedor que envía la propuesta"
                }
              },
              "required": ["proveedor_id"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Propuesta creada",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_propuesta": { "type": "integer" },
                  "mensaje": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/propuestas/{propuesta_id}/documentos",
      "summary": "Subir documento a propuesta",
      "description": "Registra un documento en la tabla 'documentos_licitacion'. Asocia el archivo (URL) con un requisito.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        },
        {
          "name": "propuesta_id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "nombre": { "type": "string" },
                "url_archivo": {
                  "type": "string",
                  "description": "URL del archivo en Supabase"
                },
                "tipo": {
                  "type": "string",
                  "enum": ["LEGAL", "TECNICO", "ECONOMICO"]
                },
                "documento_requerido_id": {
                  "type": "integer",
                  "description": "ID del requisito que cumple este documento"
                }
              },
              "required": ["nombre", "url_archivo", "tipo"]
            }
          }
        }
      },
      "responses": {
        "201": {
          "description": "Documento registrado",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_documento": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/finalizar-registro-propuestas",
      "summary": "Finalizar registro de propuestas",
      "description": "Cierra la recepción. Si hay propuestas (>0), cambia estado a 'CON_PROPUESTAS'. Si no hay propuestas y fecha_limite expiró, cambia a 'CANCELADA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Registro finalizado.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "CON_PROPUESTAS" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
