{
  "endpoints": [
    {
      "method": "GET",
      "url": "/api/licitaciones/{id}/propuestas",
      "summary": "Listar propuestas para evaluación",
      "description": "Obtiene todas las propuestas con sus documentos y estados de evaluación (JOIN propuestas + documentos_licitacion).",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Lista de propuestas",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id_propuesta": { "type": "integer" },
                    "proveedor_id": { "type": "integer" },
                    "aprobada_tecnicamente": { "type": "boolean" },
                    "aprobada_economicamente": { "type": "boolean" },
                    "puntuacion_economica": { "type": "number" },
                    "documentos": { "type": "array" }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/enviar-a-evaluacion",
      "summary": "Iniciar Evaluación Técnica",
      "description": "Cambia el estado de la licitación a 'EVALUACION_TECNICA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Estado actualizado a EVALUACION_TECNICA"
        }
      }
    },
    {
      "method": "PUT",
      "url": "/api/licitaciones/{id}/propuestas/{propuesta_id}/evaluacion-tecnica",
      "summary": "Guardar Evaluación Técnica de Proveedor",
      "description": "Actualiza el estado técnico de la propuesta y valida sus documentos.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        },
        {
          "name": "propuesta_id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "aprobada_tecnicamente": { "type": "boolean" },
                "motivo_rechazo_tecnico": { "type": "string" },
                "documentos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id_documento": { "type": "integer" },
                      "validado": { "type": "boolean" },
                      "observaciones": { "type": "string" }
                    }
                  }
                }
              },
              "required": ["aprobada_tecnicamente"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Evaluación técnica guardada" }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/finalizar-evaluacion-tecnica",
      "summary": "Finalizar Evaluación Técnica",
      "description": "Verifica si hay propuestas válidas (aprobada_tecnicamente=TRUE). Si hay >= 1, pasa a 'EVALUACION_ECONOMIA'. Si no, pasa a 'CANCELADA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Estado actualizado a EVALUACION_ECONOMIA o CANCELADA"
        }
      }
    },
    {
      "method": "PUT",
      "url": "/api/licitaciones/{id}/propuestas/{propuesta_id}/evaluacion-economica",
      "summary": "Guardar Evaluación Económica",
      "description": "Actualiza la puntuación económica de la propuesta.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        },
        {
          "name": "propuesta_id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "aprobada_economicamente": { "type": "boolean" },
                "puntuacion_economica": { "type": "number" },
                "justificacion_economica": { "type": "string" },
                "motivo_rechazo_economico": { "type": "string" }
              },
              "required": ["aprobada_economicamente"]
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Evaluación económica guardada" }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/adjudicar",
      "summary": "Adjudicar Licitación",
      "description": "Selecciona la propuesta con mayor puntaje (MAX puntuacion_economica) entre las aprobadas. Marca 'es_ganadora'=TRUE y cambia estado a 'ADJUDICADA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Licitación ADJUDICADA",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "ADJUDICADA" },
                  "propuesta_ganadora_id": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
