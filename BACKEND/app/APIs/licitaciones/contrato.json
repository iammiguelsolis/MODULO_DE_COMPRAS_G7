{
  "endpoints": [
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/contrato/generar",
      "summary": "Generar Plantilla de Contrato",
      "description": "Genera un documento Word (docx) usando 'docxtpl'. Rellena variables ({{...}}) con datos de la licitación y del proveedor ganador. Guarda el registro en la tabla 'contratos' con estado 'PLANTILLA_GENERADA'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": {
          "description": "Plantilla generada exitosamente",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_contrato": { "type": "integer" },
                  "url_documento": {
                    "type": "string",
                    "description": "URL temporal o de descarga del contrato generado"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "method": "POST",
      "url": "/api/licitaciones/{id}/contrato/cargar-firmado",
      "summary": "Cargar Contrato Firmado",
      "description": "Sube el contrato firmado por ambas partes. Actualiza la tabla 'contratos' con la URL final y cambia estado a 'FIRMADO_CARGADO'. También actualiza 'licitaciones' a estado 'CON_CONTRATO'.",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "url_archivo": {
                  "type": "string",
                  "description": "URL del contrato firmado en Supabase"
                }
              },
              "required": ["url_archivo"]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Contrato cargado. Estado: CON_CONTRATO.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_licitacion": { "type": "integer" },
                  "estado": { "type": "string", "example": "CON_CONTRATO" }
                }
              }
            }
          }
        }
      }
    }
  ]
}
