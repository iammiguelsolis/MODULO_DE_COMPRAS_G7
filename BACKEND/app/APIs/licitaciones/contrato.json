{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Generación de Contratos",
    "version": "1.0.0",
    "description": "Endpoint para generar contrato de adjudicación"
  },
  "paths": {
    "/licitaciones/{id}/contrato/plantilla": {
      "post": {
        "tags": ["Contratos"],
        "summary": "Generar plantilla de contrato",
        "description": "Paso 1: Genera la plantilla del contrato prellenada con los datos del proveedor ganador.",
        "operationId": "generarPlantillaContrato",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["supervisorId"],
                "properties": {
                  "supervisorId": {
                    "type": "integer",
                    "description": "ID del supervisor que genera la plantilla"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Plantilla generada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "mensaje": { "type": "string" },
                    "url_plantilla": { "type": "string" },
                    "id_contrato": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/licitaciones/{id}/contrato": {
      "post": {
        "tags": ["Contratos"],
        "summary": "Cargar contrato firmado",
        "description": "Paso 2: Sube el contrato firmado por el usuario y finaliza la etapa de contrato. Cambia el estado a CON_CONTRATO.",
        "operationId": "cargarContratoFirmado",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": ["archivoContrato"],
                "properties": {
                  "archivoContrato": {
                    "type": "string",
                    "format": "binary",
                    "description": "Archivo PDF del contrato firmado"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contrato firmado cargado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean" },
                    "mensaje": { "type": "string" },
                    "estado_licitacion": { "type": "string" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Error en la carga o falta de plantilla previa"
          }
        }
      },
      "get": {
        "tags": ["Contratos"],
        "summary": "Obtener información del contrato",
        "description": "Obtiene la información y documento del contrato generado",
        "operationId": "obtenerContrato",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Información del contrato",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Contrato no encontrado"
          }
        }
      }
    }
  }
}
