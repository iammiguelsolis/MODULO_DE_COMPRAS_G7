{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Documentos Requeridos",
    "version": "1.0.0",
    "description": "Endpoint para gestión de documentos requeridos y sus plantillas"
  },
  "paths": {
    "/licitaciones/{id}/documentos-requeridos": {
      "get": {
        "tags": ["Documentos"],
        "summary": "Listar documentos requeridos",
        "description": "Obtiene la lista de documentos requeridos para una licitación y sus plantillas para descarga.",
        "operationId": "listarDocumentosRequeridos",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de documentos requeridos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer",
                        "description": "ID del documento requerido"
                      },
                      "tipo": {
                        "type": "string",
                        "enum": ["LEGAL", "TECNICO", "ECONOMICO"],
                        "description": "Tipo de documento"
                      },
                      "obligatorio": {
                        "type": "boolean",
                        "description": "Si es obligatorio presentarlo"
                      },
                      "nombre_plantilla": {
                        "type": "string",
                        "description": "Nombre descriptivo de la plantilla"
                      },
                      "ruta_plantilla": {
                        "type": "string",
                        "description": "URL o ruta de la plantilla para descarga"
                      }
                    }
                  }
                },
                "example": [
                  {
                    "id": 1,
                    "tipo": "LEGAL",
                    "obligatorio": true,
                    "nombre_plantilla": "Contrato Marco",
                    "ruta_plantilla": "/documentos licitaciones/legales/contrato_marco.docx"
                  },
                  {
                    "id": 2,
                    "tipo": "TECNICO",
                    "obligatorio": true,
                    "nombre_plantilla": "Especificaciones Técnicas",
                    "ruta_plantilla": "/documentos licitaciones/tecnicos/especificaciones.docx"
                  },
                  {
                    "id": 3,
                    "tipo": "ECONOMICO",
                    "obligatorio": true,
                    "nombre_plantilla": "Oferta Económica",
                    "ruta_plantilla": "/documentos licitaciones/financieros/oferta_economica.xlsx"
                  }
                ]
              }
            }
          },
          "404": {
            "description": "Licitación no encontrada"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  }
}
