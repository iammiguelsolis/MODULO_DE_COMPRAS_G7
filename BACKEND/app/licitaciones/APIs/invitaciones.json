{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Gestión de Invitaciones",
    "version": "1.0.0",
    "description": "Endpoints para enviar invitaciones a proveedores y finalizar el período de invitación"
  },
  "paths": {
    "/licitaciones/{id}/invitaciones": {
      "post": {
        "tags": ["Invitaciones"],
        "summary": "Enviar invitaciones a proveedores",
        "description": "Envía invitaciones a una lista de proveedores seleccionados para participar en la licitación. La licitación debe estar en estado NUEVA.",
        "operationId": "enviarInvitaciones",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 456
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EnviarInvitacionesRequest"
              },
              "example": {
                "proveedoresIds": [789, 790, 791, 792, 793],
                "mensaje": "Está invitado a participar en la licitación 'Compra de equipos de cómputo'. Plazo: 31 de diciembre de 2025.",
                "compradorId": 5
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Invitaciones enviadas exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "idLicitacion": {
                      "type": "integer"
                    },
                    "cantidadInvitaciones": {
                      "type": "integer"
                    },
                    "proveedoresInvitados": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "nombre": {
                            "type": "string"
                          },
                          "email": {
                            "type": "string"
                          },
                          "estadoEnvio": {
                            "type": "string",
                            "enum": ["ENVIADO", "ERROR"]
                          }
                        }
                      }
                    },
                    "fechaEnvio": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "idLicitacion": 456,
                  "cantidadInvitaciones": 5,
                  "proveedoresInvitados": [
                    {
                      "id": 789,
                      "nombre": "TechSupply S.A.C.",
                      "email": "ventas@techsupply.com",
                      "estadoEnvio": "ENVIADO"
                    },
                    {
                      "id": 790,
                      "nombre": "Computadoras del Perú SA",
                      "email": "contacto@computadoras.pe",
                      "estadoEnvio": "ENVIADO"
                    }
                  ],
                  "fechaEnvio": "2025-11-14T09:00:00",
                  "mensaje": "Invitaciones enviadas exitosamente a 5 proveedores."
                }
              }
            }
          },
          "400": {
            "description": "Operación inválida (ej. licitación no está en estado NUEVA)"
          },
          "404": {
            "description": "Licitación no encontrada"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    },
    "/licitaciones/{id}/finalizarInvitacion": {
      "put": {
        "tags": ["Invitaciones"],
        "summary": "Finalizar período de invitación",
        "description": "Marca el fin del período de invitación y cambia el estado de NUEVA a EN_INVITACION. A partir de este momento, los proveedores pueden empezar a enviar sus propuestas.",
        "operationId": "finalizarInvitacion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 456
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["compradorId"],
                "properties": {
                  "compradorId": {
                    "type": "integer",
                    "description": "ID del comprador que finaliza la invitación"
                  },
                  "notas": {
                    "type": "string",
                    "description": "Notas adicionales"
                  }
                }
              },
              "example": {
                "compradorId": 5,
                "notas": "Se enviaron invitaciones a 8 proveedores. Esperando propuestas."
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Período de invitación finalizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "idLicitacion": {
                      "type": "integer"
                    },
                    "estado": {
                      "type": "string",
                      "enum": ["EN_INVITACION"]
                    },
                    "proveedoresInvitados": {
                      "type": "integer"
                    },
                    "fechaFinalizacion": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "idLicitacion": 456,
                  "estado": "EN_INVITACION",
                  "proveedoresInvitados": 8,
                  "fechaFinalizacion": "2025-11-14T10:30:00",
                  "mensaje": "Período de invitación finalizado. Los proveedores pueden enviar sus propuestas hasta el 31/12/2025."
                }
              }
            }
          },
          "400": {
            "description": "Operación inválida (ej. licitación no está en estado NUEVA o no se han enviado invitaciones)"
          },
          "404": {
            "description": "Licitación no encontrada"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EnviarInvitacionesRequest": {
        "type": "object",
        "required": ["proveedoresIds", "compradorId"],
        "properties": {
          "proveedoresIds": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "description": "IDs de los proveedores a invitar",
            "minItems": 1
          },
          "mensaje": {
            "type": "string",
            "description": "Mensaje personalizado para la invitación"
          },
          "compradorId": {
            "type": "integer",
            "description": "ID del comprador que envía las invitaciones"
          }
        }
      }
    }
  }
}
