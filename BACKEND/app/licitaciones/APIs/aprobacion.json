{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Aprobación de Licitaciones",
    "version": "1.0.0",
    "description": "Endpoint para aprobar o rechazar licitaciones por parte del supervisor"
  },
  "paths": {
    "/licitaciones/{id}/aprobacion": {
      "put": {
        "tags": ["Aprobaciones"],
        "summary": "Aprobar o rechazar licitación (Supervisor)",
        "description": "Permite al supervisor aprobar o rechazar una licitación en estado BORRADOR.\n- Si aprueba: cambia a estado NUEVA\n- Si rechaza: cambia a estado CANCELADA",
        "operationId": "aprobarRechazarLicitacion",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la licitación",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64",
              "example": 456
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AprobacionRequest"
              },
              "example": {
                "aprobada": true,
                "supervisorId": 10,
                "comentarios": "Licitación aprobada. Los montos y documentos están correctos. Proceder con invitaciones a proveedores."
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Licitación aprobada/rechazada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "idLicitacion": {
                      "type": "integer"
                    },
                    "estado": {
                      "type": "string",
                      "enum": ["NUEVA", "CANCELADA"]
                    },
                    "supervisorId": {
                      "type": "integer"
                    },
                    "supervisorNombre": {
                      "type": "string"
                    },
                    "fechaAprobacion": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "comentariosSupervisor": {
                      "type": "string"
                    },
                    "mensaje": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "idLicitacion": 456,
                  "estado": "NUEVA",
                  "supervisorId": 10,
                  "supervisorNombre": "Mario Altamirano",
                  "fechaAprobacion": "2025-11-13T14:20:00",
                  "comentariosSupervisor": "Licitación aprobada. Los montos y documentos están correctos.",
                  "mensaje": "Licitación aprobada. Puede proceder con el envío de invitaciones."
                }
              }
            }
          },
          "400": {
            "description": "Operación inválida (ej. licitación no está en estado BORRADOR)"
          },
          "404": {
            "description": "Licitación no encontrada"
          },
          "500": {
            "description": "Error interno del servidor"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AprobacionRequest": {
        "type": "object",
        "required": ["aprobada", "supervisorId"],
        "properties": {
          "aprobada": {
            "type": "boolean",
            "description": "true para aprobar, false para rechazar"
          },
          "supervisorId": {
            "type": "integer",
            "description": "ID del supervisor que realiza la acción"
          },
          "comentarios": {
            "type": "string",
            "description": "Comentarios u observaciones del supervisor"
          }
        }
      }
    }
  }
}
